<a href="{{ path('product_show', {id: item.product.id}) }}">
	<div class="card basket-item-card">
		<div class="card-body">
			<div class="row">
				<div class="col col-2 image-container">
					<img class="image" src="{{ item.product.image }}" alt="{{ item.product.title }}"/>
				</div>
				<div class="col col-6 col-sm-6">
					<h5 class="h6 title">{{ item.product.title }}</h5>
					{% if item.product.quantity > 15 %}
						<div class="in-stock">En stock</div>
					{% elseif item.product.quantity > 0 %}
						<div class="last-items">Plus que {{ item.product.quantity }} en stock</div>
					{% else %}
						<div class="unavailable">Indisponible</div>
					{% endif %}
				</div>
				<div class="col col-4 col-sm-2">
					<div class="quantity">Quantité : {{ item.quantity }}</div>
				</div>
				<div class="col col-12 col-sm-2">
					<div class="price">{{ item.product.price * item.quantity }} €</div>
				</div>
			</div>
		</div>
	</div>
</a>