{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block stylesheets %}
    <link href="/resources/css/basket.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="basket">
        <h1 class="title">Mon panier</h1>

        {% if app.user.getBasket|length > 0 %}
            {% for item in app.user.getBasket %}
                <div class="row mb-2">
                    <div class="col col-12">
                        {{ include('assets/basketItemCard.html.twig', {'item': item}) }}
                    </div>
                </div>
            {% endfor %}

            <div class="row mb-2 mt-3">
                <div class="col col-8 col-sm-10">
                    <h4>Frais de port</h4>
                </div>
                <div class="col col-4 col-sm-2">
                    <div class="category-price">{{ shippingPrice }}</div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col col-8 col-sm-10">
                    <h2>Total</h2>
                </div>
                <div class="col col-4 col-sm-2">
                    <div class="total-price">{{ totalPrice }}</div>
                </div>
            </div>

            <div class="d-grid d-sm-block gap-2">
                <button
                    class="btn btn-main btn-block-sm"
                    data-mdb-toggle="modal"
  					data-mdb-target="#modalConfirm"
                >
                    Commander
                </button>
            </div>
        {% else %}
            <h6>Aucun produit dans le panier...</h6>
        {% endif %}
    </div>

    <div
        class="modal fade"
        id="modalConfirm"
        tabindex="-1"
        aria-labelledby="modalConfirmLabel"
        aria-hidden="true"
	>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmLabel">Confirmation d'achat</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-mdb-dismiss="modal"
                        aria-label="Fermer"
                    ></button>
                </div>
                <div class="modal-body">
                    Vous Ãªtes sur le point d'acheter {{ numberOfProducts }} article(s) pour le prix de {{ totalPrice }}.
                </div>
                <div class="modal-footer">
                    {{ include('basket/_order_basket.html.twig', {
                        totalPrice: totalPrice
                    }) }}
                </div>
            </div>
        </div>
	</div>
{% endblock %}
