{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="form-container">
    {{ form_start(form, {
		'attr': {'class': 'form-sm'},
	}) }}

	<div class="form-outline mb-4">
		{{ form_widget(form.username, {
			'attr': {'class': 'form-control'},
		}) }}
		{{ form_label(form.username, "Nom d'utilisateur", {
			'label_attr': {'class': 'form-label'}
		}) }}
	</div>
	<div class="field-error">
		{{ form_errors(form.username) }}
	</div>

	<div class="form-outline mb-4">
		{{ form_widget(form.password, {
			'attr': {'class': 'form-control'},
		}) }}
		{{ form_label(form.password, 'Mot de passe', {
			'label_attr': {'class': 'form-label'}
		}) }}
	</div>
	<div class="field-error">
		{{ form_errors(form.password) }}
	</div>

	<div class="form-outline mb-4">
		{{ form_widget(form.confirm_password, {
			'attr': {'class': 'form-control'},
		}) }}
		{{ form_label(form.confirm_password, 'Confirmation du mot de passe', {
			'label_attr': {'class': 'form-label'}
		}) }}
	</div>
	<div class="field-error">
		{{ form_errors(form.confirm_password) }}
	</div>

	<button type="submit" class="btn btn-main btn-block">S'inscrire</button>

    {{ form_end(form) }}
</div>
{% endblock %}

